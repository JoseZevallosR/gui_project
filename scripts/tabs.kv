
<ProgresBarrDialog>

	ProgressBar:
		id: my_progress_bar
		value:0
		min:0
		max:100

		pos_hint: {"x": .2}
		size_hint_x: 0.8

<LoadDialog>:
	FileChooserI:
		size_hint: 1,0.9
		pos_hint: {'x':0,"y": 0.1}
		id: filechooser
		path: self.path_tracker
	BoxLayout:

		size_hint: 1,0.1
    	pos_hint: {"x": 0,'y':0}
        Button:
        	size_hint: 0.5,1
        	text: "Cancel"
        	on_release: root.cancel()
        Button:
        	size_hint: 0.5,1
        	text: "Load"
            on_release: root.load(filechooser.path, filechooser.selection)

<ProjectDialog>:
	
    text_input: text_input

    FileChooserListView:
        size_hint: (1, 0.9)
        pos_hint: {"x": 0,'y':0.1}
        id: filechooser
        on_selection: text_input.text = self.selection and self.selection[0] or ''
	
	BoxLayout:
		orientation: "horizontal"
		size_hint: 1,0.1
		pos_hint: {"x": 0,'y':0}
        Label:
			text: "Project Name"
			size_hint: (0.5, 0.5)
			

        TextInput:
            id: text_input
            size_hint: (0.5, 0.5)
            multiline: False
                
        Button:
        	size_hint: (0.5, 0.5)
            text: "Save"
            on_release: root.create_project(filechooser.path, text_input.text)

        Button:
        	size_hint: (0.5, 0.5)
            text: "Cancel"
            on_release: root.cancel()


