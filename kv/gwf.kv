<gwf_interface>
	Label:
		text: "Save Flows"
		size_hint: (0.2,0.05)
		pos_hint: {"x": 0,'y':0.9}
	CheckBox:
		size_hint: (None,0.05)
		pos_hint: {"x": 0.2,'y':0.9}
	Label:
		size_hint:(0.2,0.05)
		pos_hint: {"x": 0,'y':0.8}
		text: "Newton Options"

	Spinner:
		id: newton_options
		size_hint:(0.5,0.05)
		text: "Options"
		values: ['under_relaxation','Newton-Raphson']
		pos_hint: {"x": 0.2,'y':0.8}
		on_text: root.spinner_clicked(newton_options.text)

		

	Button:
		text: "create"
		pos_hint: {"center_x": 0.5,'center_y':0.1}
		on_release: root.generate_bc()

